mixin meta(path)
  link(rel='stylesheet' type='text/css' href=path+'/css/styles.css')
  include meta.pug

mixin tag(t)
  case t
    when 'HTML'
      span.tag(style='color: #ffffff; background-color: #f16524;') #{t}
    when 'CSS'
      span.tag(style='color: #ffffff; background-color: #2965f1;') #{t}
    when 'Pico-8'
      span.tag(style='color: #000000; background-color: #00e755;') #{t}
    when 'Unity'
      span.tag(style='color: #000000; background-color: #ffffff;') #{t}
    when 'C#'
      span.tag(style='color: #ffffff; background-color: #813084;') #{t}
    when 'Pug'
      span.tag(style='color: #ffffff; background-color: #a86454;') #{t}
    when 'JavaScript'
      span.tag(style='color: #363536; background-color: #fbd601;') #{t}
    when 'Python'
      span.tag(style='color: #ffdb50; background-color: #3b77a7;') #{t}
    when 'C'
      span.tag(style='color: #ffffff; background-color: #575757;') #{t}
    when 'Node.js'
      span.tag(style='color: #46483d; background-color: #90c53f;') #{t}
    when 'Java'
      span.tag(style='color: #df2c27; background-color: #ffffff;') #{t}
    when 'mongoDB'
      span.tag(style='color: #464547; background-color: #ffffff;') #{t}
    default
      span.tag #{t}
      

mixin tags(...t)
  div.tags
    each tag in t
      +tag(tag)
      | 

